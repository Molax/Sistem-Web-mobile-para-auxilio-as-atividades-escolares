@model Dominio.Turma

@{
    ViewBag.Title = "Editar";
}
<div class="container">
    <div class="row">
        <div class="form-horizontal col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Editar Turma</h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()

                        <fieldset>
                            <legend>Turma</legend>
                            <div class="form-group">
                                @Html.LabelFor(model => model.idTurma, "ID", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.idTurma, new {disabled=true, @class = "form-control", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(m => m.idTurma)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.nome, "Nome", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.nome, new { @class = "form-control", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(m => m.nome)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ano, "Ano", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.ano, new { @class = "form-control", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(m => m.ano)
                                </div>
                            </div>

                            <p>
                                <input type="submit" class="btn btn-default" value="Salvar" />
                            </p>
                        </fieldset>
                    }

                    <div>
                        @Html.ActionLink("Voltar a Lista", "Visualizar")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
