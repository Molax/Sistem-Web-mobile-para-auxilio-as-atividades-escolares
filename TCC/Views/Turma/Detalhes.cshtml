@model Dominio.Turma

@{
    ViewBag.Title = "Detalhes";
}



<div class="container">
    <div class="row">
        <div class="form-horizontal col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Detalhes da Turma</h3>
                </div>
                <div class="panel-body">
                    <hr />
                    <div class="row">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.LabelFor(model => model.idTurma, "ID da Turma")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.idTurma)
                            </dd>
                            <dt>
                                @Html.LabelFor(model => model.nome, "Nome")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.nome)
                            </dd>
                            <dt>
                                @Html.LabelFor(model => model.ano, "Ano")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ano)
                            </dd>

                        </dl>
                         <p>
                @Html.ActionLink("Editar", "Editar", new { id = Model.idTurma }) |
    @Html.ActionLink("Voltar a Lista", "Visualizar")
            </p>
                    </div>
                </div>
            </div>

           
        </div>
    </div>
</div>
