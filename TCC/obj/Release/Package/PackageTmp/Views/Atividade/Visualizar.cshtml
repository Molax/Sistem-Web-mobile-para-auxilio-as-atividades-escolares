@model IEnumerable<Dominio.Atividade>

@{
    ViewBag.Title = "Visualizar";
}


<div class="container">
    <div class="row">
        <div class="form-horizontal col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Atividades</h3>
                </div>
                <div class="panel-body">
                    <p>
                        @Html.ActionLink("Cadastrar nova atividade", "Cadastrar")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.idAtividade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ano)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.estado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.turma)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idAtividade)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ano)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.turma)
                                </td>
                                <td>

                                 
                                    @Html.ActionLink("Avaliar", "Editar", new { id = item.idAtividade })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
