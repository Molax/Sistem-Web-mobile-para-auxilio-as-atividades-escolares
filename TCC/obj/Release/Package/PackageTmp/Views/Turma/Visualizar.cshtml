@model IEnumerable<Dominio.Turma>

@{
    ViewBag.Title = "Visualizar";
}
<div class="container">
    <div class="row">
        <div class="form-horizontal col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Turmas</h3>
                </div>
                <div class="panel-body">

                    <p>
                        @Html.ActionLink("Cadastrar nova Turma", "Cadastrar")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.idTurma)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ano)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idTurma)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ano)
                                </td>
                                <td>
                                  
            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.idTurma }) 
           
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
