@model Dominio.Disciplina

@{
    ViewBag.Title = "Detalhes";
}
<div class="container">
    <div class="row">
        <div class="form-horizontal col-sm-6">

                       <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Detalhes da Disciplina</h3>
                </div>
                <div class="panel-body">

            <div>

               
                <hr />

                <div class="row">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.LabelFor(model => model.idDisciplina, "ID da Disciplina")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.idDisciplina)
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.nome, "Nome")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.nome)
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.tipo, "Tipo")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tipo)
                        </dd>
                    </dl>
                       <p>
        @Html.ActionLink("Editar", "Editar", new { id = Model.idDisciplina }) |
    @Html.ActionLink("Voltar a Lista", "Visualizar")
    </p>

                </div>

            </div>
        </div>
    </div>
            </div></div>
 
